{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "L": "readonly",
    "marked": "readonly",
    "luxon": "readonly",
    "DOMPurify": "readonly",
    "showModal": "readonly",
    "showErrorMessage": "readonly",
    "showLoadingMessage": "readonly",
    "getUserFriendlyErrorMessage": "readonly",
    "fetchWithErrorHandling": "readonly",
    "populateFireInfoTable": "readonly",
    "extractFields": "readonly",
    "getIconUrl": "readonly"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "prefer-const": "warn",
    "no-var": "warn"
  }
}
